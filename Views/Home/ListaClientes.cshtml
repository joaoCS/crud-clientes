@model IEnumerable<asp19.Models.Cliente>
@{
    ViewData["Subtitle"] = "Clientes Registrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.Subtitle</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="AdicionarClientes" class="btn btn-primary">Adicionar Clientes...</a>
    </div>
</div>

@if (Model.Count() == 0)
{
    <p>Não existem clientes registrados</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td class="text-right">
                    <a asp-controller="Home" asp-action="EditarCliente" asp-route-id="@cliente.Id" class="btn btn-primary"><i class="fa fa-pencil"></i> Editar</a>
                    <a asp-controller="Home" asp-action="EliminarCliente" asp-route-id="@cliente.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <p>Total: <b>@Model.Count()</b></p>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ir à Home</a>
</div>