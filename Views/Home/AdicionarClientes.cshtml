@model  asp19.Models.Cliente

@{
    ViewData["Subtitle"] = "Adicionar Clientes";
}

<h2 class="titulo">@ViewBag.Subtitle</h2>

<hr />

<div class="card bg-light p-5">
    <form asp-controller="Home" asp-action="AdicionarClientes" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            @Html.TextBoxFor(model => model.Nome)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            @Html.TextBoxFor(model => model.Telefone)
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancelar</a>
        <button class="btn btn-primary">Salvar</button>
    </form>
</div>

